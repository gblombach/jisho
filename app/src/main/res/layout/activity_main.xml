<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/ivJishoLogo"
        android:layout_width="211dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/blank"
        app:srcCompat="@drawable/jishologo" />

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:autofillHints="@string/searchHint"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/searchHint"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="111dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:gravity="center_horizontal"
        android:text="@string/search" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvKanji"
            android:layout_width="152dp"
            android:layout_height="106dp"
            android:layout_gravity="center|top"
            android:layout_marginLeft="10dp"
            android:gravity="center|top"
            android:text="@string/tvResults"
            android:textAlignment="gravity"
            android:textSize="90dp" />

        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="235dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnKanjiLeft"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            app:srcCompat="@android:drawable/ic_media_rew" />

        <ImageButton
            android:id="@+id/btnKanjiRight"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="150dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            app:srcCompat="@android:drawable/ic_media_ff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvKotoba"
            android:layout_width="166dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal|center_vertical"
            android:textAlignment="gravity"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/tvDetails2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnKotobaLeft"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            app:srcCompat="@android:drawable/ic_media_rew" />

        <ImageButton
            android:id="@+id/btnKotobaRight"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="150dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            app:srcCompat="@android:drawable/ic_media_ff" />
    </LinearLayout>

</LinearLayout>